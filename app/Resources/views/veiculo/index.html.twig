    {% extends ':template:template.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

        <link rel="stylesheet" href="{{ asset("bundles/mrssge/css/dataTables.bootstrap.css") }}">

{% endblock %}


    {% block contentheader %}


    <section class="content-header">
        <h1>
            Veiculo
            <small>Listar</small>
        </h1>
    </section>


    {% endblock %}


    {% block panelheading %}
    <a href="{{ path('cadastro_veiculo_new') }}" class="btn btn-primary btn-sm link-search">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>    {% endblock %}

    {% block panelbody %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped table-datatable">
            <thead>
            <tr>
                <th>Ações</th>
                    <th>Placa</th>
                    <th>Modelo</th>
                    <th>Anofabricacao</th>
                    <th>Titulo</th>
            </tr>
            </thead>
            <tbody>
            {% for veiculo in veiculos %}
            <tr>
                <td>
                    <a href="{{ path('cadastro_veiculo_show', { 'id': veiculo.id }) }}" class="btn btn-primary btn-sm link-search">
                        <span class="glyphicon glyphicon-eye-open"></span>
                        Mostrar
                    </a>
                    <a href="{{ path('cadastro_veiculo_edit', { 'id': veiculo.id }) }}" class="btn btn-primary btn-sm link-search">
                        <span class="glyphicon glyphicon-edit"></span>
                        Editar
                    </a>
                </td>
                <td><a href="{{ path('cadastro_veiculo_show', { 'id': veiculo.id }) }}">{{ veiculo.placa }}</a></td>
                <td>{{ veiculo.modelo }}</td>
                <td>{% if veiculo.anoFabricacao %}{{ veiculo.anoFabricacao|date('Y-m-d') }}{% endif %}</td>
                <td>{{ veiculo.titulo }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    {% endblock %}


{% block javascripts %}
{{ parent() }}

    <script src="{{ asset("bundles/mrssge/js/jquery.dataTables.js") }}"></script>
    <script src="{{ asset("bundles/mrssge/js/dataTables.bootstrap.js") }}"></script>
    <script src="{{ asset("bundles/mrssge/js/mrs-dataTable.js") }}"></script>


{% endblock %}