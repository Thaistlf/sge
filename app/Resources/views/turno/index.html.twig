    {% extends ':template:template.html.twig' %}


    {% block contentheader %}


    <section class="content-header">
        <h1>
            Turno
            <small>Listar</small>
        </h1>
    </section>


    {% endblock %}


    {% block panelheading %}
    <a href="{{ path('cadastro_turno_new') }}" class="btn btn-primary btn-sm">
            <span class="glyphicon glyphicon-plus"></span>
            Novo
        </a>    {% endblock %}

    {% block panelbody %}
    <div class="table-responsive">
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>Ações</th>
                    <th>Descricao</th>
                    <th>Id</th>
            </tr>
            </thead>
            <tbody>
            {% for turno in turnos %}
            <tr>
                        <td><a href="{{ path('cadastro_turno_show', { 'id': turno.id }) }}">{{ turno.descricao }}</a></td>
                        <td>{{ turno.id }}</td>
                        <td>
                                <a href="{{ path('cadastro_turno_show', { 'id': turno.id }) }}" class="btn btn-primary btn-sm">
                                    <span class="glyphicon glyphicon-show"></span>
                                    show
                                </a>
                                <a href="{{ path('cadastro_turno_edit', { 'id': turno.id }) }}" class="btn btn-primary btn-sm">
                                    <span class="glyphicon glyphicon-edit"></span>
                                    edit
                                </a>
                        </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


    {% endblock %}
