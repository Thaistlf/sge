{% extends ':template:template.html.twig' %}


    {% block contentheader %}

        <section class="content-header">
            <h1>
                VeiculoHasEscola
                <small>Novo</small>
            </h1>
        </section>

    {% endblock %}


    {% block panelheading %}

        <div class="row">

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_escola_show',{'id': escola.id}) }}" class="btn btn-primary btn-sm link-search">
                <span class="fa fa-reply"></span>
                Mostrar Escola
            </a>

        </div>

        <div class="col-md-2 col-sm-3 col-xs-3">

            <a href="{{ path('cadastro_veiculohasescola_index',{'escola': escola.id}) }}" class="btn btn-primary btn-sm link-search">
                <span class="fa fa-reply"></span>
                Listar Veiculos
            </a>

        </div>

        </div>{% endblock %}


    {% block panelbody %}

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="input-load">
            <button type="submit" class="btn btn-primary btn-sm input-search">
                <span class="glyphicon glyphicon-floppy-disk"></span>
                Salvar
            </button>
        </div>
        {{ form_end(form) }}

    {% endblock %}

    {% block panelfooter %}

        <div class="row">
            <div class="col-md-12">

                <div class="table table-responsive">
                    <table class="table table-bordered table-condensed">
                        <tbody>

                        </tr>
                        <tr>
                            <th>Nome</th>
                            <td>{{ escola.nome }}</td>
                        </tr>
                        <tr>
                            <th>Endereco</th>
                            <td>{{ escola.endereco }}</td>
                        </tr>
                        <tr>
                            <th>Telefone</th>
                            <td>{{ escola.telefone }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>

    {% endblock %}
